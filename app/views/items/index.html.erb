

 <div class="row-fluid">
  <div class="col-md-6">
    <div
  id="map"
  style="width: 100%;
  height: 100vh;"
  data-markers="<%= @markers.to_json %>"
></div>
  </div>
  <div class="col-md-6" >


    <% if @items_sorted.present? %>

    <% @items_sorted.each do |item| %>


    <div class="col-xs-12 col-sm-6">

      <%= link_to item_path(item) do %>

          <div class="card" style="border-radius: 3px; background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.2)), url(<%= item.photo %>);">
          <div class="card-category"> Available</div>
          <div class="card-description">
            <h2><%= item.title %></h2>
            <p>Very cool tool, the best</p>
            <p><%= item.price %></p>
          </div>
        </div>

      <% end %>
      </div>

    <% end %>

    <% else  %>
    <h3>Unfortunately, we couldn't find any items in your area</h3>
    <% end %>
  </div>
</div>
