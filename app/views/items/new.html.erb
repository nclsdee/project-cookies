<h1>This is a new page</h1>

<%= simple_form_for @item do |f| %>
  <%= f.input :title %>
  <%= f.input :description %>
  <%= f.input :price %>
  <%= f.input :category %>
  <%= f.input :image_up %>
  <%= f.input :image_up_cache, as: :hidden %>

  <%= f.hidden_field :address, value: current_user.address %>
  <%= f.hidden_field :user_id, value: current_user.id %>
  <%= f.submit "Add item", class: "btn btn-primary" %>
<% end %>
